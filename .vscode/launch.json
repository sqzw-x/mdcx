{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python 调试程序: 包含参数的当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args": "${command:pickArgs}",
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Debug server.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/server.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "MDCX_DEV": "1"
            },
        },
        {
            "name": "Debug main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "DEBUG": "1"
            }
        },
        {
            "name": "Debug pytest",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest",
            "args": "${command:pickArgs}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "DEBUG": "1"
            }
        },
        {
            "name": "Debug crawler",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/crawl",
            "args": "${command:pickArgs}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "DEBUG": "1"
            }
        }
    ]
}